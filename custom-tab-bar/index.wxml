<view class="tab-bar">
	<view class="tab-bar-content">
		<view wx:for="{{list}}" wx:key="index" class="tab-bar-content-item" data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
			<view class="img">
				<image src="{{selected === index ? item.selectedIconPath : item.iconPath}}"></image>
			</view>
			<view style="color: {{selected === index ? selectedColor : color}}">{{item.text}}</view>
		</view>
	</view>
</view>
