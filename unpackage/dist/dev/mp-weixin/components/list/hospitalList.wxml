<view class="hospital-list"><block wx:for="{{hospitalList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="hospital-item"><view class="head-img"><image src="{{item.headimg}}" mode></image><block wx:if="{{item.iscollect}}"><image class="collect" src="/static/images/collect.png" mode></image></block></view><view class="infos"><view class="name">{{item.name}}</view><view class="location">{{item.address}}</view><view class="info"><view class="star-box"><block wx:for="{{5}}" wx:for-item="num" wx:for-index="__i0__" wx:key="*this"><view class="star-item"><block wx:if="{{num<=item.star-1}}"><image class="star" src="/static/images/star.png" mode="aspectFill"></image></block><block wx:else><image class="star" src="/static/images/star1.png" mode="aspectFill"></image></block></view></block></view><text class="mark">{{item.star+"分"}}</text><text class="range">{{item.range+"km"}}</text></view><block wx:if="{{item.type==1}}"><view class="show-type type1"><text class="type">合约医院</text><text class="per"><text class="num">{{item.per}}</text>%</text></view></block><block wx:else><view class="show-type type2"><text class="type">协议医院</text><text class="per"><text class="num">{{item.per}}</text>%</text></view></block></view></view></block><u-loadmore vue-id="35000128-1" bg-color="rgb(240, 240, 240)" status="{{loadStatus}}" data-event-opts="{{[['^loadmore',[['addRandomData']]]]}}" bind:loadmore="__e" bind:__l="__l"></u-loadmore></view>