.user-list .user-item {
  margin: 0 30rpx;
  padding: 18rpx 0;
  position: relative;
  height: 190rpx;
}
.user-list .user-item .headimg {
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  left: 38rpx;
  top: 35rpx;
}
.user-list .user-item .infos {
  display: inline-block;
  position: absolute;
  left: 186rpx;
  top: 50rpx;
  line-height: 40rpx;
}
.user-list .user-item .infos .name {
  font-size: 32rpx;
  font-weight: bolder;
  margin-bottom: 16rpx;
}
.user-list .user-item .infos .info {
  font-size: 28rpx;
  color: #999999;
}
.user-list .user-item .infos .info text {
  margin-right: 30rpx;
}
.user-list .user-item .status {
  display: inline-block;
  height: 50rpx;
  font-size: 28rpx;
  border: 1px solid #777777;
  padding: 0 20rpx;
  line-height: 50rpx;
  float: right;
  -webkit-border-radius: 50rpx;
          border-radius: 50rpx;
  font-weight: 500;
  margin-top: 50rpx;
}

