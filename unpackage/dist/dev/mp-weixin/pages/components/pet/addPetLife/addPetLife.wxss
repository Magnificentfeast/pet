.addpetlife {
  padding: 30rpx 30rpx 75rpx;
}
.addpetlife .cell-gruops {
  font-size: 30rpx;
  background: #FFFFFF;
  -webkit-box-shadow: 0rpx 15rpx 15rpx 0px rgba(119, 119, 119, 0.05);
          box-shadow: 0rpx 15rpx 15rpx 0px rgba(119, 119, 119, 0.05);
  -webkit-border-radius: 30rpx;
          border-radius: 30rpx;
  overflow: hidden;
}
.addpetlife .cell-gruops .tabs {
  padding: 0 30rpx;
  position: relative;
  font-size: 28rpx;
  background: #F7F7F7;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.addpetlife .cell-gruops .tabs .tab-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: center;
}
.addpetlife .cell-gruops .tabs .tab-item .img {
  margin: 0 auto;
  width: 100rpx;
  height: 100rpx;
  margin-top: 21rpx;
  margin-bottom: 20rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  overflow: hidden;
}
.addpetlife .cell-gruops .tabs .tab-item .img image {
  width: 100%;
  height: 100%;
}
.addpetlife .cell-gruops .tabs .tab-item .text {
  text-align: center;
  position: relative;
  font-size: 28rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: 400;
  color: #333333;
  margin: 0 auto;
  padding-bottom: 24rpx;
}
.addpetlife .cell-gruops .tabs .tab-item .text.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 10rpx;
  background: -webkit-linear-gradient(45deg, #3B1291, #8629E4);
  background: linear-gradient(45deg, #3B1291, #8629E4);
  width: 60%;
  margin: 0 auto;
}
.addpetlife .content .video,
.addpetlife .content .imgs {
  padding: 20rpx;
}
.addpetlife .content .video .upload,
.addpetlife .content .imgs .upload {
  width: 185rpx;
  height: 185rpx;
  border: 2rpx dashed #E4E4E4;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  position: relative;
  display: inline-block;
  margin-right: 30rpx;
  overflow: hidden;
}
.addpetlife .content .video .upload .icon,
.addpetlife .content .imgs .upload .icon {
  width: 78rpx;
  height: 68rpx;
  margin: 45rpx 50rpx 0;
}
.addpetlife .content .video .upload .text,
.addpetlife .content .imgs .upload .text {
  margin-top: 10rpx;
  font-size: 20rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #999999;
  text-align: center;
}
.addpetlife .content .video .upload .u-clear-icon,
.addpetlife .content .imgs .upload .u-clear-icon {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
}
.addpetlife .content .video .upload video,
.addpetlife .content .imgs .upload video {
  width: 100%;
}
.addpetlife .btn {
  height: 100rpx;
  -webkit-border-radius: 50rpx;
          border-radius: 50rpx;
  line-height: 100rpx;
  font-size: 35rpx;
  text-align: center;
}
.addpetlife .submit {
  background-color: #18abff;
  color: #FFFFFF;
  margin: 88rpx 25rpx 0;
}
.addpetlife .u-textarea-class {
  height: 200rpx;
}

